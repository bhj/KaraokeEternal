{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "paths": {
      "*": [
        "../src/*"
      ],
      "shared/*": [
        "../shared/*"
      ]
    },
    "moduleResolution": "Bundler",
    "module": "esnext",
    "jsx": "react",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.css$"
        }
      }
    ]
  },
  "include": [
    "../src/**/*",
    "../shared/**/*",
    "./declarations.d.ts"
  ]
}